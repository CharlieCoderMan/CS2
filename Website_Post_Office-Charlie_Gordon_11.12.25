<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Type In Properties of Your Package</title>
  <script>
    //Author: Charlie Gordon
    //Sources: Mr. Campbell
    //Summary: Asks for inputs about a package and returns cost based on its classifcation adn the distance the package needs to travel
    //Bugs: 
    //Log: 1.0




    // This function takes the zipcode inputs and dectects which zone it is a part of
    // Args:
    // Distance (int)
    // Returns (int)
    // Numbers 0-6 (int) 0 means unmailable and the others are the zones of zipcodes
    function zipcode(distance) 
    {
      if ((distance >= 1) && (distance <= 6900))
      {
        return 1;
      }
      else if ((distance >= 7000) && (distance <= 19999))
      {
        return 2;

      }
      else if ((distance >= 20000) && (distance <= 35999))
      {
        return 3;
      }
      else if ((distance >= 36000) && (distance <= 62999))
      {
        return 4;
      }
      else if ((distance >= 63000) && (distance <= 84999))
      {
        return 5;
      }
      else if ((distance >= 85000) && (distance <= 99999))
      {
        return 6;
      }
      else{
        return 0;
      }
    }  //brace that ends function
  
  // function takes the length width and height and classify's the package
  // Args:
  // Length (float)
  // Width (float)
  // Height (float)
  // Returns:
  // Numbers 0-6 0 means unmailable and 1-6 is types of packages
    function getsize(length, width, height)
  {

    const package_calc = length + (width*2) + (height*2) ;  

    if ((length >= 3.5) && (length <= 4.25) && (width >= .007) && (width <= .016) && (height >= 3.5) && (height <= 6))
    {          
        return 1; //Post card
    }
    else if ((length >= 4.25) && (length <= 6) && (width >= .007) && (width <= .015) && (height >= 6) && (height <= 11.5))
    {         
        return 2; //Large post card
    }
    else if ((length >= 3.5) && (length <= 6.125) && (width >= .016) && (width <= .25) && (height >= 5) && (height <= 11.5))
    {       
        return 3; //Envelope
    }
    else if ((length >= 6.125) && (length <= 24) && (width >= .25) && (width <= .5) && (height >= 11) && (height <= 18))
    {           
        return 4; //Large enevelope
    }
    else if (package_calc <= 84)
    {                                                                                            
        return 5; //Package
    }
    else if ((package_calc >= 84) && (package_calc <= 130))
    {
      return 6; // Large Package
    }    
    else {
      return 0;
    }                                                                
    }//the brace ends function

    //Function that calculates the cost of the package typed in the main using the other two functions
    //Args:
    //Length(Float)
    //Width(Float)
    //Height(Float)
    //Your_loc(int)
    //Their_loc(int)
    //Returns:
    //Card Price (Float)
    function costcalc(length, width, height, your_loc, their_loc){
      //const = this variable is constant/can't change; Math.abs is absolute valuable
      const zip_dif = Math.abs(zipcode(your_loc)-zipcode(their_loc));
    
    if (getsize(length, width, height) == 1)
    {
        //zone price is the amount per zone traveled
        let zone_price = .03;
        //card price is the base price of the code
        let card_price = .20;
        return(card_price + (zone_price*zip_dif));
    }
    else if (getsize(length, width, height) == 2)
    {
        let zone_price = .03;
        let card_price = .37;
        return(card_price + (zone_price*zip_dif));
    }
    else if (getsize(length, width, height) == 3)
    {
        let zone_price = .04;
        let card_price = .37;
        return(card_price + (zone_price*zip_dif));
    }
    else if (getsize(length, width, height) == 4)
    {
        let zone_price = .05;
        let card_price = .60;
        return(card_price + (zone_price*zip_dif));
    }
    else if (getsize(length, width, height) == 5)
    {
        let zone_price = .25;
        let card_price = 2.95;
        return(card_price + (zone_price*zip_dif));
    }
    else if (getsize(length, width, height) == 6)
    {
        let zone_price = .35;
        let card_price = 3.95;
        return(card_price + (zone_price*zip_dif));
    }
    
    }

    
    
    function main() {
      // Get values from the input fields
      //ParseFloat makes the value = a float
      const num1 = parseFloat(document.getElementById("length").value);
      const num2 = parseFloat(document.getElementById("height").value);
      const num3 = parseFloat(document.getElementById("width").value);
      const num4 = parseInt(document.getElementById("your_loc").value);
      const num5 = parseInt(document.getElementById("their_loc").value);
      //if package was considered unmailable
      if ((getsize(num1, num3, num2) == 0) || (zipcode(num4) == 0) || (zipcode(num5) == 0)){
        document.getElementById("result").innerText = "UNMAILABLE";
      }
      //if it can be mailed
      else 
      {
      //gets costcalc price
      number = costcalc(num1,num3,num2,num4,num5)
      //makes sure it takes goes to the second digit
      let formattedNumber = number.toFixed(2);
      //removes any potential leading zeros 
      leading0gone = formattedNumber.replace(/^0+/, ''); 
      //return the cost with the best formatted version of the cost
      document.getElementById("result").innerText = "Cost: $" + leading0gone
      }
      
      

    }

    
  </script>

  
<body> 
  
  <h2 style = "color: white; font-size: 65px; text-align: center; font-family: Arial, Helvetica, sans-serif;" >Welcome to the Post Office</h2> <br>


  <!-- Input fields -->
   <div style="text-align: center;">
    <input  style="text-align: center;" type="number" id="length" placeholder="Length"><br><br>
    <input  style="text-align: center;" type="number" id="height" placeholder="Height"><br><br>
    <input  style="text-align: center;" type="number" id="width" placeholder="Width"><br><br>
    <input  style="text-align: center;" type="number" id="your_loc" placeholder="Your Zip Code"><br><br>
    <input  style="text-align: center;" type="number" id="their_loc" placeholder="Their Zip Code"><br><br>
    <button onclick="main()">Calculate</button>
     <!-- Area to display the result -->
    <p id="result"></p><br>
    <img src="Post_Office_Logo.svg.png" alt="Post Office Logo" width="250" height="187.40234375">
  <!-- Button that calls the function -->
  </div>
 

</body>
